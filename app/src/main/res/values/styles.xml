<resources>
    <style name="DayButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:backgroundTint">@color/light_pink</item>
        <item name="android:textColor">#9F3E3E</item>
        <item name="android:padding">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="GradeTableCell">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ProfileNameStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#9F3E3E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SubTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>



    <style name="ProfileInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="GradeTableCellBold">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="DayButton.Active" parent="DayButton">
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">#9F3E3E</item>
    </style>
</resources>