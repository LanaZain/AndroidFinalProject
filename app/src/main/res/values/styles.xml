<resources>
    <style name="DayButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:backgroundTint">@color/light_pink</item>
        <item name="android:textColor">#9F3E3E</item>
        <item name="android:padding">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="GradeTableCell">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GradeTableCellBold">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="DayButton.Active" parent="DayButton">
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">#9F3E3E</item>
    </style>
</resources>